<style type="text/css">
    html{
        font-size:20px;
        font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }
    body{
        background-color: black;
    }
    #container{
        border:2px solid #000000;
        border-radius: 10px;
        width:1200px;
        margin: 0px auto;
    }
    header{
        background-color: red;
        border: 2px solid #000000;
        padding: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .logo img{
        height:50px;
        width: 50px;
    }
    nav ul{
        list-style-type: none;
        display: flex;
    }
    nav ul li{
        margin-left: 20px;
        font-size: 1.2rem;
    }
    nav ul li a{
        text-decoration: none;
        color: black;
        font-weight: bold;
    }
    section {
        background-color: white;
        min-height: 300px;
    }
</style>
<style>

</style>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div id="container">
        <header>
            <div class="logo">
                <img src="~/Content/Images/logo.png" alt="logo" />
            </div>

            <nav>
                <ul>
                    <li><a href="~/Home/TrangChu">Trang Chủ</a></li>
                    <li><a href="~/Product/ProductDetail">Sản Phẩm</a></li>
                    <li><a href="~/Product/ShoppingCart">Giỏ Hàng</a></li>
                    <li><a href="~/Home/Contact">Liên Hệ</a></li>
                </ul>
            </nav>
        </header>
        <section>@RenderBody()</section>
        <footer class="footer">
             
               
        </footer>

    </div>
</body>
</html>
